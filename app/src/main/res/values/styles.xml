<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/samsung_background_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appbar_color</item>
        <!--<item name="android:textColor">@color/samsung_text_primary_color</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:textSize">100sp</item>
        <item name="android:background">@color/samsung_background_color</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
    </style>

    <style name="TitleTextAppearance" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="ActivityAlertDialogOneUiStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:gravity">bottom</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/color_black</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <!-- Used for the title and text -->
        <item name="colorControlNormal">@color/samsung_text_primary_color</item>
        <item name="android:textColorPrimary">@color/samsung_text_primary_color</item>
        <item name="textColorAlertDialogListItem">@color/samsung_text_primary_color</item>

        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="PickServiceDialogStyle" parent="ActivityAlertDialogOneUiStyle">
        <item name="android:background">@drawable/bg_pick_dialog_lite</item>
    </style>

    <style name="SeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/samsung_background_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginStart">@dimen/samsung_margin_half</item>
        <item name="android:layout_marginEnd">@dimen/samsung_margin_half</item>
        <item name="rippleColor">@color/light_gray</item>
    </style>

    <style name="AppNameStyle">
        <item name="android:layout_marginStart">@dimen/samsung_margin_half</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppDescriptionStyle">
        <item name="android:layout_marginStart">@dimen/samsung_margin</item>
        <item name="android:layout_marginTop">@dimen/samsung_margin_half</item>
        <item name="android:layout_marginEnd">@dimen/samsung_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">@dimen/samsung_margin</item>
        <item name="android:layout_marginTop">@dimen/samsung_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/samsung_margin_half</item>
    </style>


    <style name="SeparatorStyle.Lite" parent="SeparatorStyle" />

    <style name="SeparatorStyle.Dark" parent="SeparatorStyle" />

    <style name="SettingsActivityStyle">

    </style>


    <style name="SettingsItemStyle">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SquareGearSettingsActivityStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/squaregear_color</item>
    </style>

    <style name="ENoteGearSettingsActivityStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/enotegear_background</item>
    </style>

</resources>
